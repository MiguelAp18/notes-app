<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="bi bi-pencil-square"></i></a>
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST" class="d-grid gap-2">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-sm" type="submit">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="col-md-3 mx-auto">
            <div class="card">
                <div class="card-body d-grid gap-2">
                    <h1>Hello {{user.name}}!</h1>
                    <p class="lead">There are not notes yet.</p>
                    <a href="/notes/add" class="btn btn-success">Create One!</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>